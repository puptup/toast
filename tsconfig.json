{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "@*": ["./src/*"]
    },
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "rollup.config.mjs"],
}